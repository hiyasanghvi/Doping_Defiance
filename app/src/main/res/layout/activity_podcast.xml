<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".podcast">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PODCAST"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#FCF6F5"
        android:background="#990011"
        android:id="@+id/tv"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tvv"
    app:layout_constraintTop_toBottomOf="@+id/tv"
    android:layout_marginTop="20dp"
    android:textColor="#990011"
    android:textSize="14dp"
    android:background="#FCF6F5"
    android:lineSpacingExtra="3dp"
    android:text="Join us on the Clean Sport Chronicles,





     where we dive into the world of anti-doping with experts, athletes, and advocates. Explore real stories of resilience, learn about the latest in anti-doping science, and discover how clean competition fuels true greatness. Together, letâ€™s build a future of integrity and fairness in sports. Tune in and be inspired!"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvv">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- CardView 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="243dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="239dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/podcast1" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="243dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="239dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/podcast2" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>